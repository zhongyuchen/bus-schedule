.navigator {
  border-bottom: solid 1rpx #dddddd;
}
.navigator-top, .navigator {
  border-top: solid 1rpx #dddddd;
  padding: 35rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}

.navigator-img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15px;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-weight: 600;
  font-size: 20px;
  margin: 5%;
}

.usage{
  margin-left: 10%;
  margin-right: 10%;
  margin-bottom: 5%;
}

