/* pages/info/info.wxss */
@import "../../lib/weui.wxss";

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50px;
}

.info-logo {  
  overflow:hidden;  
  display: block;  
  width: 225rpx;  
  height: 225rpx;  
  margin: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}  

.info-name {
  font-weight: 600;
  font-size: 20px;
}

.ground{
  position: fixed;
  text-align: center;
  bottom: 10px;
  left: 0;
  right: 0;
  font-size: 15px;
}

.ground-name{
  font-weight: 600;
}

.ground-update{
  color: #6161cc;
}

