<!--pages/info/info.wxml-->
<view class="page">
  <view class="section">
    <view class="info">
      <image src="../../static/pic/xiaohui.jpg" class="info-logo"></image>
      <text class="info-name">复旦校车时刻表</text>
      <text class="info-text">便捷的复旦校车查询工具</text>
    </view>
  </view>

  <view class="section">
    <view class="tr">
      <navigator url="pages/usage/usage" class="navigator" hover-class="navigator-hover">
        <image src="../../static/pic/form.png" class="navigator-img"></image>
        <view class="navigator-text">使用说明</view>
        <view class="navigator-arrow"></view>
      </navigator>
      <view class="navigator-divide"></view>
      <navigator url="pages/notice/notice" class="navigator" hover-class="navigator-hover">
        <image src="../../static/pic/view.png" class="navigator-img"></image>
        <view class="navigator-text">{{noticeTitle}}</view>
        <view class="navigator-arrow"></view>
      </navigator>
    </view>
  </view>

  <view class="section">
    <view class="tr">
      <button open-type="feedback" class="navigator-btn" hover-class="navigator-hover">
        <image src="../../static/pic/api.png" class="navigator-img"></image>
        <view class="navigator-text">反馈与投诉</view>
        <view class="navigator-arrow"></view>
      </button>
      <view class="navigator-divide"></view>
      <button open-type="contact" class="navigator-btn" hover-class="navigator-hover">
        <image src="../../static/pic/user.png" class="navigator-img"></image>
        <view class="navigator-text">联系客服</view>
        <view class="navigator-arrow"></view>
      </button>
    </view>
  </view>

  <view class="transparent-filler"></view>
</view>